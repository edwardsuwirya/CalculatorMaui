<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#aaffffff"
             x:Class="CalcMaui.Presentation.Pages.LoadingPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Frame HeightRequest="64" WidthRequest="64"
                   CornerRadius="32" BackgroundColor="White">
                <ActivityIndicator IsRunning="True" Color="Blue"></ActivityIndicator>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>
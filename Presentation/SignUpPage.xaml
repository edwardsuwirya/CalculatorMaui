<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalcMaui.Presentation.SignUpPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Entry x:Name="EntryUserName" Placeholder="User Name"></Entry>
                <Label x:Name="LabelUserNameError" IsVisible="False"></Label>
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Entry x:Name="EntryPassword" Placeholder="Password" IsPassword="True"></Entry>
                <Label x:Name="LabelPasswordError" IsVisible="False"></Label>
            </VerticalStackLayout>
            <Button Text="Sign Up" Clicked="Button_OnClicked"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>